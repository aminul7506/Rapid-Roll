<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.rapidroll">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rapid1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.user.rapidroll.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
        <activity
            android:name="com.example.user.rapidroll.GameOver"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
        <activity
            android:name="com.example.user.rapidroll.HighScore"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
        <activity
            android:name="com.example.user.rapidroll.About"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
        <activity
            android:name="com.example.user.rapidroll.Instruction"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
        <activity
            android:name="com.example.user.rapidroll.Themes"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            />
        </activity>
    </application>

</manifest>
